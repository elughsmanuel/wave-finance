{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "lib": ["es2016", "dom"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "baseUrl": "./",
      "paths": {
        "*": ["node_modules/*", "src/types/*"],
      },
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
}
